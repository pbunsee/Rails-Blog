<%= form_for @user do %>
  <%= label :username %>
  <%= text_field :username, { placeholder: "Username"} %> <br>
  <%= label :firstname %>
  <%= text_field :firstname, { placeholder: "First Name"} %> <br>
  <%= label :lastname %>
  <%= text_field :lastname, { placeholder: "Last Name"} %> <br>
  <%= label :email %>
  <%= text_field :email, { placeholder: "E-Mail"} %> <br>
  <%= label :password %>
  <%= password_field :password, { placeholder: "Password"} %> <br>
  <%= submit :edit %>
<% end %>
