<%= form_for @user do |f| %>
  <h1>Add New User</h1>
  <%= f.label :username %>
  <%= f.text_field :username, { placeholder: "Username"} %> <br>
  <%= f.label :firstname %>
  <%= f.label :password %>
  <%= f.password_field :password, { placeholder: "Password"} %> <br>
  <%= f.submit :Create %>
<% end %>
